{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Playwright Tests",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "kuvareAddress.spec.ts", "--headed", "--debug"],
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "test"
        },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  